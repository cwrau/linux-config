#!/usr/bin/env python3

from lib.audio_script import *


def audio_program_sink():
    prog_input: PulseSinkInputInfo = get_choice(inputs, "source",
                                                lambda i: f'{i.proplist["application.name"]}'
                                                          f' ({i.proplist["application.process.id"]})')

    if prog_input is None:
        return

    sink: PulseSinkInfo = get_choice(sinks, "sink", lambda s: s.description,
                                     lambda s: s.index == prog_input.sink)

    if sink is None:
        return

    pulse.sink_input_move(prog_input.index, sink.index)


if __name__ == "__main__":
    audio_program_sink()
