#!/usr/bin/env python3

from lib.audio_script import *


def audio_sink():
    sink = get_choice(items=sinks, item_name="sink", name_getter=lambda s: s.description,
                      active_selector=lambda s: s.name == default_sink, sorter=lambda s: (s.description, s.description))

    if sink is None:
        return

    pulse.sink_default_set(sink)

    for inp in inputs:
        pulse.sink_input_move(inp.index, sink.index)


if __name__ == "__main__":
    audio_sink()
