#!/usr/bin/env sh

set -ex

backlight="/sys/class/backlight/intel_backlight"

max=$(cat $backlight/max_brightness)
current=$(cat $backlight/brightness)
step=$(( max / 10))

if [ "$1" = "up" ]
then
  if [ $(( current / ( max / 100 ) )) -le 9 ]
  then
    step=$(( step / 10 ))
  fi

  if [ $(( current / ( max / 100 ) )) -le 0 ]
  then
    step=$(( step / 10 ))
  fi

  new=$(( current + step ))
  [ $new -gt "$max" ] && new=$max

  sudo sh -c "echo $new > $backlight/brightness"
elif [ $1 = "down" ]
then
  if [ $(( current / ( max / 100 ) )) -le 10 ]
  then
    step=$(( step / 10 ))
  fi

  if [ $(( current / ( max / 100 ) )) -le 1 ]
  then
    step=$(( step / 10 ))
  fi

  new=$(( current - step ))
  [ $new -le 0 ] && new=1
  [ $current -le 1 ] && new=0

  sudo sh -c "echo $new > $backlight/brightness"
fi

current=$(cat $backlight/brightness)
notify-send.sh -R $XDG_RUNTIME_DIR/brightness-notification -t 1001 "Brightness: $(echo "scale=3; $current / $max * 100" | bc | sed -r 's#0+$##; s#^\.#0.#; s#\.$##; s#^$#0#')%"
