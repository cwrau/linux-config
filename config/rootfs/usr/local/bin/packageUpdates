#!/usr/bin/env bash

set -ex

function notification-send() {
  dunstify -h string:x-dunst-stack-tag:updates "$@"
}

if [ -e /var/lib/pacman/db.lck ]; then
  if [ $(($(date +%s) - $(date +%s -r /var/lib/pacman/db.lck))) -gt 1800 ]; then
    sudo rm /var/lib/pacman/db.lck
  else
    notification-send -t 3590000 -u critical 'Updates aborted! Database lock exists'
    exit 0
  fi
fi

if sudo informant check; then
  timeout 20 /usr/bin/paru -Sy

  UPDATES=$(paru -Qu --repo 2>/dev/null | (grep -v ignored -c || true))
  AUR_UPDATES=$(paru -Qu --aur --devel 2> /dev/null | (grep -v ignored -c || true))

  if (( (UPDATES + AUR_UPDATES) >= 1 )) && ! pgrep -x paru &> /dev/null; then
    if [ "$1" = '--unattended' ]; then
      if ! sudo systemctl is-active updates-run; then
        notification-send -t 10000 -u low "$UPDATES | $AUR_UPDATES" "$(paru -Qu --devel | grep -v ignored | awk '{print $1}' | sed -z '$ s/\n$//' | tr '\n' ',')"

        mapfile -t environment < <(awk 'BEGIN{for(v in ENVIRON) print "--setenv=" v}')
        if systemd-inhibit --why Updates --mode block --what shutdown sudo -E systemd-run --uid "$USER" --unit updates-run --wait --collect --nice 19 --property=CPUWeight=1 ${environment[@]} -- paru -Syu --noconfirm; then
          notification-send -t 10000 -u normal 'Updates done!'
        else
          if [[ "$(notification-send -t 3590000 -u critical 'Updates failed!' -A Show,Show)" == "Show" ]]; then
            i3-sensible-terminal -- journalctl _SYSTEMD_INVOCATION_ID="$(sudo systemctl show -p InvocationID --value updates-run.service)"
          fi
        fi
      fi
    else
      i3-sensible-terminal --wait -- paru -Syu --devel --noconfirm --removemake --combinedupgrade --batchinstall
    fi
  fi
else
  items=$?
  if [ "$items" -gt 100 ]; then
    notification-send -t 10000 -u normal 'Error checking Arch news!'
  else
    notification-send -t 10000 -u critical "$items Unread Arch news articles!"
  fi
fi
