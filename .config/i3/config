set $displayMode "Set display mode [w]ork [l]aptop"
#bindsym $mod+x mode $displayMode
mode $displayMode {
    bindsym w exec $XDG_CONFIG_HOME/screenlayouts/work.sh; mode "default"; restart
    bindsym l exec $XDG_CONFIG_HOME/screenlayouts/laptop.sh; mode "default"; restart

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

