[Unit]
Description=glava %I
PartOf=glava.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=%E/glava/launch.sh %i
ExecStop=%E/glava/stop.sh %i
RestartSec=0
KillSignal=SIGKILL

# disallow writing to /usr, /bin, /sbin, ...
ProtectSystem=yes
# more paranoid security settings
NoNewPrivileges=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes

[Install]
WantedBy=graphical-session.target
