[Unit]
Description=glava %I
PartOf=glava.target

[Service]
Type=forking
ExecStart=%E/glava/launch.sh %i
RestartSec=0
Restart=always
KillSignal=SIGKILL

# disallow writing to /usr, /bin, /sbin, ...
ProtectSystem=yes
# more paranoid security settings
NoNewPrivileges=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes

[Install]
WantedBy=graphical-session.target
