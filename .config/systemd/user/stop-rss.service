[Unit]
Description=Stop RSS Feeder

[Service]
Type=oneshot
ExecStart=-/usr/bin/systemctl --user stop rss.service

# disallow writing to /usr, /bin, /sbin, ...
ProtectSystem=yes
# more paranoid security settings
NoNewPrivileges=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes
RestrictNamespaces=yes
